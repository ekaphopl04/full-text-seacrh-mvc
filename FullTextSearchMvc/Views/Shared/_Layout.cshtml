<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FullTextSearchMvc</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FullTextSearchMvc.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary border-bottom box-shadow mb-4">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-search me-2"></i><translate key="FullTextSearchMvc"></translate>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item mx-2">
                            <a class="nav-link rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-2"></i> <translate key="Home"></translate>
                            </a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link rounded-pill px-3" asp-area="" asp-controller="Search" asp-action="Index">
                                <i class="fas fa-search me-2"></i> <translate key="Search"></translate>
                            </a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link rounded-pill px-3" asp-area="" asp-controller="Article" asp-action="Create">
                                <i class="fas fa-plus-circle me-2"></i> <translate key="NewArticle"></translate>
                            </a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center">
                        <div class="dropdown me-3">
                            <button class="btn btn-outline-light rounded-pill dropdown-toggle" type="button" id="languageSelector" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-globe me-2"></i> @(Context.Session.GetString("Language") == "th" ? "ภาษาไทย" : "English")
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="languageSelector">
                                <li><a class="dropdown-item language-option" href="#" data-language="en"><i class="fas fa-flag me-2"></i> English</a></li>
                                <li><a class="dropdown-item language-option" href="#" data-language="th"><i class="fas fa-flag me-2"></i> ภาษาไทย</a></li>
                            </ul>
                        </div>
                        <div class="dropdown">
                            <button class="btn btn-outline-light rounded-pill dropdown-toggle" type="button" id="userMenu" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-circle me-2"></i> <translate key="Menu"></translate>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userMenu">
                                <li><h6 class="dropdown-header"><translate key="QuickActions"></translate></h6></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i> <translate key="Settings"></translate></a></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-question-circle me-2"></i> <translate key="Help"></translate></a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-sign-out-alt me-2"></i> <translate key="SignOut"></translate></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bg-light py-4 mt-5">
        <div class="container">
            <div class="text-center">
                <p class="mb-0">&copy; 2025 - FullTextSearchMvc - <translate key="AllRightsReserved"></translate></p>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function() {
            $('.language-option').click(function(e) {
                e.preventDefault();
                var language = $(this).data('language');
                
                $.ajax({
                    url: '/Home/SetLanguage',
                    type: 'POST',
                    data: { language: language },
                    success: function() {
                        location.reload();
                    }
                });
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
